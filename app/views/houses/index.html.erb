<ul class="breadcrumb">
  <li>
    <a href="/">innMaps</a> <span class="divider">/</span>
  </li>
  <li class="active">Houses</li>
</ul>


<table class="table table-striped">
  <thead>
    <tr>
      <th width = "30%"><h4>Địa chỉ</h4></th>
      <th width = "55%"><h4>Thông tin</h4></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @houses.each do |house| %>
    <tr>
      <td><%= house.address %></td>
      <td><%= house.info %></td>
      <td><%= link_to '<i class=" icon-eye-open"></i>'.html_safe, house %></td>
      <td><%= link_to '<i class="icon-edit"></i>'.html_safe, edit_house_path(house) %></td>
      <td><%= link_to '<i class="icon-remove-sign"></i>'.html_safe, house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New house", new_house_path, class: 'btn' %>